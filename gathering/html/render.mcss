Message -gathering{
  section.content {
      section.actions {
      display: flex
      flex-basis: 100%
      justify-content: flex-end 
    }
  }
  section.title {
    a {
      font-size: 2rem 
    }  
    input {
      border: 1px solid gainsboro
      width: 100%
      font-size: 1em
    }
  }
}

Message -gathering-mini{
  display: flex
  div.thumbnail {
    width: 12rem
    height: 12rem
  }
  div.details {
    flex-grow: 1
    padding-left: 1rem
  }
}
